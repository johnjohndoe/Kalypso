<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<?xml-stylesheet type="text/xsl" href="xsl/grafik-vorlage.xsl"?>
<obsdiagview xmlns="obsdiagview.template.kalypso.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="obsdiagview.template.kalypso.org
.\obsdiagview.xsd" xmlns:xlink="http://www.w3.org/1999/xlink">
	<title>%title%</title>
	<legend title="" visible="true"/>

	<axis id="D" datatype="date" label="Datum" unit="" direction="horizontal" position="bottom" />
	<axis id="W" datatype="double" label="Wasserstand" unit="cm" direction="vertical" position="left" />
   	<axis id="N" datatype="double" label="Niederschlag" unit="cm" direction="vertical" position="right" inverted="true" upperMargin="0.8"/>
   	
   	<!-- Kodierung color:
   	red;green;blue[;alpha]
   	
   	jeweils in [0-255]
   	-->

	<!-- Niederschlag_rechnung -->
   	<observation linktype="zml" xlink:href="%href4%">
		<curve id="C2" name="Niederschlag" color="0;128;192;100" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="Niederschlag" diagram-axis="N" />
	   	</curve>
	</observation>

	<!-- Wasserstand_gemessen -->
   	<observation linktype="zml" xlink:href="%href1%">
		<curve id="C1" name="Wasserstand - Beobachtet" color="0;255;128" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="W" diagram-axis="W" />
	   	</curve>
	</observation>

	<!-- Wasserstand_gerechnet -->
   	<observation linktype="zml" xlink:href="%href2%">
		<curve id="C2" name="Wasserstand - Rechnung" color="255;0;0" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="W" diagram-axis="W" />
	   	</curve>
	</observation>

	<!-- Wasserstand_vorhersage -->
   	<observation linktype="zml" xlink:href="%href3%">
		<curve id="C2" name="Wasserstand - Vorhersage" color="0;255;0" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="W" diagram-axis="W" />
	   	</curve>
	</observation>
</obsdiagview>
