<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="scenarioData" name="Scenario data" schema="schema/scenarioData.exsd"/>   	
   <extension-point id="kalypsoModule" name="kalypsoModule" schema="schema/kalypsoModule.exsd"/>
   <extension
         id="org.kalypso.afgui.ScenarioHandlingProjectNature"
         name="ScenarioHandlingProjectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.kalypso.afgui.ScenarioHandlingProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.kalypso.afgui.views.WorkflowView"
            icon="icons/nuvola_select/loop.png"
            id="org.kalypso.kalypso1d2d.pjt.views.WorklistView"
            name="Aktivit채ten">
      </view>
      <view
            allowMultiple="false"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/scenario_view.gif"
            id="org.kalypso.kalypso1d2d.pjt.views.ScenarioView"
            name="Szenarien">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.kalypso.kalypso1d2d.pjt.views.ScenarioView">
         <includes>
            <contentExtension
                  pattern="org.kalypso.afgui.content.*">
            </contentExtension>
            <contentExtension
                  pattern="org.kalypso.kalypso1d2d.pjt.navigator.ScenarioResultContent">
            </contentExtension>
            <contentExtension
                  pattern="org.kalypso.afgui.filters.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.kalypso.afgui.views.ScenarioContentProvider"
            id="org.kalypso.afgui.content.scenarios"
            labelProvider="org.eclipse.ui.model.WorkbenchLabelProvider"
            name="Szenario"
            priority="highest"
            providesSaveables="false">
         <enablement>
            <or>
               <adapt
                     type="org.eclipse.core.resources.IResource">
               </adapt>
               <instanceof
                     value="org.kalypso.afgui.scenarios.Scenario">
               </instanceof>
            </or>
         </enablement>
      </navigatorContent>
      <commonFilter
            activeByDefault="true"
            id="org.kalypso.afgui.filters.noresources"
            name="Ressourcen ausblenden">
         <filterExpression>
            <not>
               <or>
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
                  <instanceof
                        value="org.kalypso.afgui.scenarios.Scenario">
                  </instanceof>
               </or>
            </not>
         </filterExpression>
      </commonFilter>
      <commonFilter
            activeByDefault="true"
            description="Nur Projekte mit Szenarien anzeigen"
            id="org.kalypso.afgui.filters.scenarioprojects"
            name="Nur Projekte mit Szenarien anzeigen">
         <filterExpression>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <not>
                  <test
                        property="org.eclipse.core.resources.projectNature"
                        value="org.kalypso.afgui.ScenarioHandlingProjectNature">
                  </test>
               </not>
            </and>
         </filterExpression>
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.kalypso.afgui.handlers.ActivateScenarioHandler"
            commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__ActivateScenario">
      </handler>
      <handler
            class="org.kalypso.afgui.handlers.AddScenarioHandler"
            commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__AddScenario">
      </handler>
      <handler
            class="org.kalypso.afgui.handlers.NewProjectHandler"
            commandId="org.kalypso.afgui.command.newproject">
      </handler>
      <handler
            class="org.kalypso.afgui.handlers.RemoveScenarioHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <reference
                  definitionId="oneScenario">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="org.kalypso.afgui.handlers.DeleteResourceHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.eclipse.core.resources.IProject">
                  </instanceof>
               </iterate>
            </with>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.renew.workflow.tasks.category"
            description="Neues Projekt anlegen"
            id="org.kalypso.afgui.command.newproject"
            name="Projekt neu">
      </command>
      <command
            categoryId="de.renew.workflow.tasks.category"
            description="Ein neues Szenario hinzuf체gen"
            id="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__AddScenario"
            name="Szenario hinzuf체gen">
      </command>
      <command
            categoryId="de.renew.workflow.tasks.category"
            description="Das gew채hlte Szenario aktivieren"
            id="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__ActivateScenario"
            name="Szenario aktivieren">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.kalypso.afgui.command.newproject"
            icon="icons/project_add.gif">
      </image>
      <image
            commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__ActivateScenario"
            icon="icons/scenario_activate.gif">
      </image>
      <image
            commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__AddScenario"
            icon="icons/scenario_add.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.kalypso.kalypso1d2d.pjt.views.ScenarioView">
         <command
               commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__ActivateScenario">
            <visibleWhen>
               <reference
                     definitionId="oneScenario">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__AddScenario">
            <visibleWhen>
               <reference
                     definitionId="oneScenario">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.kalypso.kalypso1d2d.pjt.views.ScenarioView">
         <separator
               name="scenario"
               visible="true">
         </separator>
         <command
               commandId="org.kalypso.afgui.command.newproject">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__ActivateScenario">
            <visibleWhen>
               <reference
                     definitionId="oneScenario">
               </reference>
            </visibleWhen>
         </command>
         <command
               commandId="http___www.tu-harburg.de_wb_kalypso_kb_workflow_test__AddScenario">
            <visibleWhen>
               <reference
                     definitionId="oneScenario">
               </reference>
            </visibleWhen>
         </command>
         <separator
               name="additions"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="de.renew.workflow.model.contextHandlerFactories">
      <contextHandlerFactory
            class="org.kalypso.afgui.handlers.KalypsoContextHandlerFactory"
            id="kalypsoContextHandlerFactory">
      </contextHandlerFactory>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="oneScenario">
         <and>
            <count
                  value="1">
            </count>
            <iterate>
               <instanceof
                     value="org.kalypso.afgui.scenarios.Scenario">
               </instanceof>
            </iterate>
         </and>
      </definition>
   </extension>
   
    <!-- perspectives-->
	<extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.kalypso.afgui.perspective.Perspective"
            icon="icons/kalypsoWorkflow.png"
            id="org.kalypso.kalypso1d2d.pjt.perspective.Perspective"
            name="Kalypso Workflow">
      </perspective>      
   </extension>
 <extension
       point="org.eclipse.ui.decorators">
    <decorator
          icon="icons/scenario_small.png"
          id="org.kalypso.scenarios.scenarioNatureDecorator"
          label="Szenario-Projekt"
          lightweight="true"
          location="TOP_RIGHT"
          state="true">
       <enablement>
          <and>
             <objectClass
                   name="org.eclipse.core.resources.IProject">
             </objectClass>
             <objectState
                   name="projectNature"
                   value="org.kalypso.afgui.ScenarioHandlingProjectNature">
             </objectState>
          </and>
       </enablement>
    </decorator>
 </extension>
 <extension
       point="org.eclipse.core.runtime.adapters">
    <factory
          adaptableType="de.renew.workflow.connector.cases.CaseHandlingProjectNature"
          class="de.renew.workflow.connector.cases.CaseAdapterFactory">
       <adapter
             type="org.eclipse.ui.model.IWorkbenchAdapter">
       </adapter>
       <adapter
             type="org.eclipse.ui.model.IWorkbenchAdapter2">
       </adapter>
    </factory>
 </extension>
 
   
</plugin>
