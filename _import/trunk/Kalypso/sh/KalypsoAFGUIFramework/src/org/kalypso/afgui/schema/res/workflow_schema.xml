	<rdfs:Class 
		rdf:about="&wbs;WorkflowStatus">
		<rdfs:label xml:lang="en">Workflow</rdfs:label>
		<rdfs:comment xml:lang="en">
			Represents the runtime status of a workflow
		</rdfs:comment>
		<rdfs:subClassOf rdf:resource="&rdfs;Resource"/>		
	</rdfs:Class>
	
	<!-- =================================================================
			nextPhase
	 ==================================================================-->
	<rdf:Property 
		rdf:about="&wbs;associatedModelResource">	
		<rdfs:label>Associated model resource</rdfs:label>
		<rdfs:comment>
			Associated model resource
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;WorkflowStatus"/>
		<rdfs:range rdf:resource="xs:anyURI"/>
	</rdf:Property>
	
	<rdf:Property 
		rdf:about="&wbs;executedWorkflowResource">	
		<rdfs:label>Associated model resource</rdfs:label>
		<rdfs:comment>
			Associated model resource
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;WorkflowStatus"/>
		<rdfs:range rdf:resource="&wbs;Workflow"/>
	</rdf:Property>
	
	<rdf:Property 
		rdf:about="&wbs;executedWorkflowResource">	
		<rdfs:label>Associated model resource</rdfs:label>
		<rdfs:comment>
			Associated model resource
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;WorkflowStatus"/>
		<rdfs:range rdf:resource="&wbs;Workflow"/>
	</rdf:Property>
	
	<rdf:Property 
		rdf:about="&wbs;activityStates">	
		<rdfs:label>Associated model resource</rdfs:label>
		<rdfs:comment>
			Associated model resource
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;WorkflowStatus"/>
		<rdfs:range rdf:resource="&wbs;Actvivity"/>
	</rdf:Property>
	
