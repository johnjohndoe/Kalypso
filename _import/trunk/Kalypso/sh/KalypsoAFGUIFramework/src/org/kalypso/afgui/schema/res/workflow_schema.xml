			rdf:resource=""/>
		</wbs:ActivityStatus>
	================================================================== -->
	<rdfs:Class 
		rdf:about="&wbs;ActivityStatus">
		<rdfs:label xml:lang="en">Activity Status</rdfs:label>
		<rdfs:comment xml:lang="en">
			Activity Status
		</rdfs:comment>
		<rdfs:subClassOf 
			rdf:resource="&rdfs;Resource"/>		
	</rdfs:Class>
	<rdf:Property 
		rdf:about="&wbs;executedActivity">	
		<rdfs:label>executed activity</rdfs:label>
		<rdfs:comment>
			Executed Activity
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;ActivtyStatus"/>
		<rdfs:range rdf:resource="&wbs;Actvivity"/>
	</rdf:Property>
	
	<!-- =================================================================
			exeState
	================================================================== -->
	<rdf:Property 
		rdf:about="&wbs;exeState">
		<rdfs:label xml:lang="en">Execution State</rdfs:label>
		<rdfs:comment xml:lang="en">A resource representing the status </rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;Activity"/>
		<rdfs:range rdf:resource="xsd:string"/>
	</rdf:Property>
	
	
</rdf:RDF>
