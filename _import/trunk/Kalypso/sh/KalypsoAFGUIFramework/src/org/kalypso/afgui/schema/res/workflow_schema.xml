  <!-- ===================================================================
  	hasName
  ==================================================================== -->
	<rdf:Property 
		rdf:about="&wbs;hasName" 
		rdfs:label="Has Name">	
		<rdfs:comment>A name of an activity or workflow</rdfs:comment>
		<rdfs:subPropertyOf rdf:resource="&rdfs;label"/>
		<rdfs:domain rdf:resource="&wbs;Activity"/>
		<rdfs:domain rdf:resource="&wbs;Workflow"/>
		<rdfs:range rdf:resource="xsd:string"/>
	</rdf:Property>
	
	<!-- =================================================================
			hasHelp
	================================================================== -->
	<rdf:Property 
		rdf:about="&wbs;hasHelp">	
		<rdfs:label>Has Help</rdfs:label>
		<rdfs:comment>
			Associate an help resource to an activity
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;Activity"/>
		<rdfs:domain rdf:resource="&wbs;Phase"/>
		
		<rdfs:range rdf:resource="xsd:string"/>
		<rdfs:range rdf:resource="&wbs;Help"/>
	</rdf:Property>
	
	<!-- =================================================================
			hasTask
	================================================================== -->
	<rdf:Property 
		rdf:about="&wbs;hasTask">	
		<rdfs:label>Has Task</rdfs:label>
		<rdfs:comment>
			Associates a task to an activity
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;Activity"/>
		<rdfs:range rdf:resource="&wbs;Task"/>
	</rdf:Property>
	
	<!-- =================================================================
			nextPhase
	 ==================================================================-->
	<rdf:Property 
		rdf:about="&wbs;nextPhase">	
		<rdfs:label>Has Task</rdfs:label>
		<rdfs:comment>
			Associates a phase with the following phase
		</rdfs:comment>
		<rdfs:domain rdf:resource="&wbs;Phase"/>
		<rdfs:range rdf:resource="&wbs;Phase"/>
	</rdf:Property>
	
	
