<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Workflow URI="http://www.renew.de/workflow#test"
	xmlns="http://www.renew.de/workflow/base"
	xmlns:con="http://www.renew.de/workflow/contexts"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">	
	<Name>Test-Workflow</Name>
	<TaskGroup URI="http://www.renew.de/workflow#Group1">
		<Name>Group1</Name>
		<Task context="NavigatorView"
			URI="http://www.renew.de/workflow#Task1">
			<Help>Dies ist eine Aufgabe</Help>
			<Name>Aufgabe 1</Name>
		</Task>
		<Task context="TaskAndProblemView"
			URI="http://www.renew.de/workflow#Task2">
			<Help>Dies ist noch eine Aufgabe</Help>
			<Name>Aufgabe 2</Name>
		</Task>
	</TaskGroup>
	<con:MultiContext id="root">
		<con:PerspectiveContext id="caseHandling"
			perspectiveId="de.renew.workflow.connector.caseHandlingPerspective">
			<con:ViewContext id="NavigatorView"
				viewId="org.eclipse.ui.views.ResourceNavigator"
				parent="caseHandling">			
			</con:ViewContext>
			<con:MultiContext id="TaskAndProblemView" parent="caseHandling">
				<con:ViewContext id="TaskView"
					viewId="org.eclipse.ui.views.TaskList" parent="TaskAndProblemView" />
				<con:ViewContext id="ProblemView"
					viewId="org.eclipse.ui.views.ProblemView" parent="TaskAndProblemView">					
				</con:ViewContext>
			</con:MultiContext>			
		</con:PerspectiveContext>
	</con:MultiContext>
</Workflow>