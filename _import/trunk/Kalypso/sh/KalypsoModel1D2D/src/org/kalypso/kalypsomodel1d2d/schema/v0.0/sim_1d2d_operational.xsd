	<!-- =======================================================
		Initial condition
	======================================================== -->
	<xs:element 
		name="initialCondition"
		type="op1d2d:InitialConditionPropertyType"/>
	<xs:complexType name="InitialConditionPropertyType">
		<xs:annotation>
			<xs:documentation>
				Property to hold an InitialCondition
				element, or a substitute
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element 
				ref="op1d2d:InitialCondition"
				minOccurs="0" maxOccurs="1"/>
		</xs:sequence>
		<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
	</xs:complexType>
	
	<!--  Is it still used? There is no content,no docuemntation, ... -->
	<xs:element 
			name="InitialCondition"
			type="op1d2d:InitialConditionType"
			substitutionGroup="gml:_Feature">
		</xs:element>
	<xs:complexType 
		name="InitialConditionType">
		<xs:complexContent>
			<xs:extension 
				base="gml:AbstractFeatureType">
			</xs:extension>
		</xs:complexContent>		
	</xs:complexType>
	
	<!-- ================================================
		Boundary conditions
		================================================== -->
	<xs:element 
		name="boundaryCondition"
		type="op1d2d:BoundaryConditionPropertyType"/>
	<xs:complexType name="BoundaryConditionPropertyType">
		<xs:annotation>
			<xs:documentation>
			</xs:documentation>
		</xs:annotation>
		<xs:sequence>
			<xs:element 
				ref="op1d2d:BoundaryCondition"
				minOccurs="0" maxOccurs="1"/>
		</xs:sequence>
		<xs:attributeGroup ref="gml:AssociationAttributeGroup"/>
	</xs:complexType>
	
	<xs:element name="BoundaryCondition" type="op1d2d:BoundaryConditionType"
		substitutionGroup="simBase:_FlowRelationship">
		<xs:annotation>
			<xs:documentation xml:lang="de">
				<xs:label>Randbedingung</xs:label>
				<xs:tooltip>FE-Netz Randbedingung</xs:tooltip>
			</xs:documentation>
			<xs:documentation>
				<xs:label>BoundaryCondition</xs:label>
				<xs:tooltip>BoundaryCondition for FE-Net</xs:tooltip>
			</xs:documentation>
		</xs:annotation>
	</xs:element>

	<xs:complexType name="BoundaryConditionType">
		<xs:complexContent>
			<xs:extension base="simBase:AbstractFlowRelationshipType">
				<xs:sequence>
					<xs:element name="timeserie" type="op1d2d:TimeseriePropertyType">
						<xs:annotation>
							<xs:documentation xml:lang="de">
								<xs:label>Zeitreihe</xs:label>
								<xs:tooltip>Zeitreihe</xs:tooltip>
							</xs:documentation>
							<xs:documentation>
								<xs:label>Timeserie</xs:label>
								<xs:tooltip>Timeserie</xs:tooltip>
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:complexType name="TimeseriePropertyType">
		<xs:sequence>
			<xs:element ref="op1d2d:Timeserie" minOccurs="1" maxOccurs="1" />
		</xs:sequence>
	</xs:complexType>

	<xs:element name="Timeserie" type="op1d2d:TimeserieType" substitutionGroup="om:Observation" />

	<xs:complexType name="TimeserieType">
		<xs:complexContent>
			<xs:extension base="om:ObservationType">
				<xs:sequence>
					<xs:element name="dataSourceURI" type="xs:anyURI">
						<xs:annotation>
							<xs:documentation xml:lang="de">
								<xs:label>Quelle</xs:label>
								<xs:tooltip>Herkunft der Zeitreihe</xs:tooltip>
								<xs:description>
									Beschreibt woher die Zeitreihe urspr√ºnglich kam.
								</xs:description>
							</xs:documentation>
							<xs:documentation>
								The source where the timeserie came from. TODO: maybe put it into
								the timeserie definition?
								<xs:label>Source</xs:label>
								<xs:tooltip>Origin of the Timeserie</xs:tooltip>
								<xs:description>
									Describes where this timeserie came from.
								</xs:description>
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	
	<xs:element name="DirectedTimeserie" type="op1d2d:DirectedTimeserieType" substitutionGroup="op1d2d:Timeserie"/>
	
	<xs:complexType name="DirectedTimeserieType">
		<xs:complexContent>
			<xs:extension base="op1d2d:TimeserieType">
				<xs:sequence>
					<xs:element name="direction" type="gml:DegreeValueType" nillable="false">
						<xs:annotation>
							<xs:documentation xml:lang="de">
								<xs:label>Richtung</xs:label>
								<xs:tooltip>Richtung der Zeitreihe</xs:tooltip>
							</xs:documentation>
							<xs:documentation>
								<xs:label>Direction</xs:label>
								<xs:tooltip>Direction of the Timeserie</xs:tooltip>
							</xs:documentation>
						</xs:annotation>
					</xs:element>
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>
	

</xs:schema>
