<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         id="org.kalypso.dss.extension.catalog"
         name="UrlCatalog"
         point="org.kalypso.contribs.java.urlCatalog">
      <catalog
            class="org.kalypso.dss.DSSUrlCatalog"
            id="org.kalypso.dss.urlcatalog"/>
   </extension>
   <extension
         id="org.kalypso.dss.actionSets"
         name="org.kalypso.dss.actionSets"
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.kalypso.dss.config.actionSet"
            label="Kalypso Config"
            visible="true">
         <menu
               id="sampleMenu"
               label="Kalypso Config &amp;Menu">
            <separator name="sampleGroup"/>
         </menu>
         <action
               class="org.kalypso.dss.planerclient.actions.SavePrespectivePageAction"
               icon="icons/sample.gif"
               id="org.kalypso.dss.planerclient.actions.SavePerspectivePageAction"
               label="&amp;Save Perspective"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Save this Workbenchepage as Perspective (incl. all open Editors and Views)"/>
         <action
               class="org.kalypso.dss.planerclient.actions.RestorePrespectivePageAction"
               icon="icons/sample.gif"
               id="org.kalypso.dss.planerclient.actions.RestorePerspectivePageAction"
               label="&amp;Restore Perspective"
               menubarPath="sampleMenu/sampleGroup"
               style="push"
               toolbarPath="sampleGroup"
               tooltip="Restore Workbenchpage from a file (incl. all open Editors and Views)"/>
      </actionSet>   
   </extension>
   <extension
   		 id="org.kalypso.dss.planerclient.perspectives"
         name="Kalypso Planer-Client Perspectiven"
         point="org.eclipse.ui.perspectives">
       <perspective
            class="org.kalypso.dss.planerclient.perspectives.KalypsoDssPlanerClientPhaseOnePerspectiveFactory"
            fixed="true"
            icon="icons/sample.gif"
            id="org.kalypso.dss.planerclient.perspectiv.phase.one"
            name="Kalypso Planer-Client Phase 1"/>
      <perspective
            class="org.kalypso.dss.planerclient.perspectives.KalypsoDssPlanerPhaseTwoClientPerspectiveFactory"
            fixed="false"
            icon="icons/sample.gif"
            id="org.kalypso.dss.planerclient.perspectiv.phase.two"
            name="Kalypso Planer-Client Phase 2"/>  
   </extension>
   <extension
         id="org.kalypso.dss.views"
         name="Kalypso Dss Views"
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.kalypso.dss.planerclient.browser.KalypsoWebBrowserView"
            id="org.kalypso.dss.planerclient.view.browser"
            name="Kalypso Browser"/>   
   </extension>

</plugin>
