<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="KalypsoConf" default="deploy" basedir=".">

	<property name="deployable.war" value="kalypso_conf.zip" />
	<property name="service.name" value="KalypsoConf" />
	<property name="war.path" value="file:///${dep.services}/${deployable.war}" />

	<import file="${workspace}/KalypsoBuild/common-tomcat/build.xml"/>
	
	<target name="prepare" description="Creates the build directory">
		<echo message="Creating the required directories...." />
		<mkdir dir="${dep.server}" />
		<mkdir dir="${dep.services}"/>
	</target>

	<target name="build-war" depends="prepare" description="builds the KalypsoConf.war">
		<jar jarfile="${dep.services}/${deployable.war}">
			<fileset dir="${project.path}/deployable-services/KalypsoConf/src" includes="*/**" />
		</jar>
	</target>

</project>
