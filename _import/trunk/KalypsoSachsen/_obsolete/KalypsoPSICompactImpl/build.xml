<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="KalypsoPSICompactImpl" default="deploy">

	<property name="project" value="${workspace}/KalypsoPSICompactImpl" />

	<import file="${workspace}/KalypsoBuild/common-project/build.xml" />
	<property name="project-name" value="PSICompact" />

	<path id="compile.classpath">
		<fileset dir="${project.lib}" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoCore/build/deploy" includes="**/*.jar" />
	</path>
	
	<!-- compile overriden in order to also copy the non-java files -->
	<target name="compile" depends="prepare">
		<antcall target="commonbuild.compile"/>
		
		<copy todir="${project.bin}">
			<fileset dir="${project.src}" excludes="**/*.java" />
		</copy>
	</target>
	
	<!-- deploy overriden in order to copy it to KalypsoAdapterPSICompact -->
	<target name="deploy" depends="compile">

		<antcall target="commonbuild.deploy"/>
		
		<copy todir="${workspace}/KalypsoAdapterPSICompact/lib">
			<fileset dir="${project.deploy}" includes="${project-name}.jar" />
		</copy>
	</target>

</project>
