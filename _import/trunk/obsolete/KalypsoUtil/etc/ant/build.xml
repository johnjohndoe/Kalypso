<?xml version="1.0"?>
<project name="KalypsoUtilBuild" default="deploy">

	<property name="project" value="${workspace}/KalypsoUtil" />

	<import file="${workspace}/KalypsoBuild/common-project/build.xml" />
	<property name="project-name" value="KalypsoUtil" />

	<path id="compile.classpath">
		<fileset dir="${project.lib}" includes="**/*.jar" />
	</path>

	<!-- overriden to also copy non-java files -->
	<target name="compile" depends="prepare">
		<antcall target="commonbuild.compile" />
	
		<copy todir="${project.bin}">
			<fileset dir="${project.src}" excludes="**/*.java"/>
		</copy>
	</target>

</project>

