<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<obsdiagview xmlns="obsdiagview.template.kalypso.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xlink="http://www.w3.org/1999/xlink">
	<title>%title%</title>
	<legend title="" visible="true"/>

	<axis id="D" datatype="date" label="Datum" unit="" direction="horizontal" position="bottom" />
	<axis id="W" datatype="double" label="Wasserstand" unit="cm" direction="vertical" position="left" />
   	<axis id="Q" datatype="double" label="Abfluss" unit="mÂ³/s" direction="vertical" position="left" />
   	
   	<!-- Kodierung color:
   	red;green;blue[;alpha]
   	
   	jeweils in [0-255]
   	-->

	<!-- Wasserstand_gemessen -->
   	<observation linktype="zml" xlink:href="%href1%">
		<curve id="C1" name="Wasserstand - Beobachtung" color="0;0;255" > <!-- vorher 0,255,128 -->
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="Volumen" diagram-axis="W" />
	   	</curve>
	</observation>

	<!-- Wasserstand_gerechnet -->
   	<observation linktype="zml" xlink:href="%href2%">
		<curve id="C2" name="Wasserstand - Rechnung" color="255;0;0" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="Volumen" diagram-axis="W" />
	   	</curve>
	</observation>

	<!-- Abgabe -->
   	<observation linktype="zml" xlink:href="%href3%">
		<curve id="C4" name="Abgabe" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="Abfluss" diagram-axis="Q" />
	   	</curve>
	</observation>
	
	<!-- Zufluss_gerechnet -->
   	<observation linktype="zml" xlink:href="%href4%">
		<curve id="C5" name="Zufluss - Rechnung" color="255;128;64" >
			<mapping observation-axis="Datum" diagram-axis="D" />
			<mapping observation-axis="Abfluss" diagram-axis="Q" />
	   	</curve>
	</observation>
</obsdiagview>
