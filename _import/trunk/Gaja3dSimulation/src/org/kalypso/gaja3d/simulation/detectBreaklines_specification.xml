<?xml version="1.0" encoding="UTF-8"?>
<modelspec xmlns="simspec.core.simulation.kalypso.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xs="http://www.w3.org/2001/XMLSchema" typeID="Gaja3d_detectBreaklines">

  <!-- Input -->
  <input id="Boundary" type="gaja3d:Boundaries" description="The boundary for restricting the points." />
  <input id="DemGrid" type="gaja3d:DemGrids" description="The grid to detect breaklines for." />
  <input id="EdgeFilter" type="xs:string" optional="true" description="The applied edge filtering method (ood, sobel, prewitt)." />
  <input id="SmoothFilter" type="xs:string" optional="true" description="The applied smooth filtering method (none, gauss, bilateral)." />
  <input id="smooth" type="xs:int" optional="true" description="The amount of smoothing (filter width in grid cells)." />
  <input id="FeatureDetector" type="xs:string" optional="true" description="The applied feature detection method (simple or canny)." />
  <input id="highThresh" type="xs:double" optional="true" description="The high slope threshold." />
  <input id="lowThresh" type="xs:double" optional="true" description="The low slope threshold." />
  <input id="distanceTolerance" type="xs:double" optional="true" description="The tolerance for Douglas Peucker breakline thinning." />

  <!-- Output -->
  <output id="Breaklines" type="gaja3d:Breaklines" description="The detected breaklines." />
  
  <!-- Logging -->
  <output id="stdout" type="xs:anyURI" description="Standard out" />
  <output id="stderr" type="xs:anyURI" description="Standard err" />
</modelspec>