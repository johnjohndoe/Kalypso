<?xml version="1.0" encoding="UTF-8"?>
<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">

	<!-- Instance service -->
	<service name="Gaja3dService">
		<resource name="home"
			type="org.kalypso.gaja3d.service.impl.Gaja3dResourceHome">
			<resourceParams>
				<parameter>
					<name>resourceClass</name>
					<value>org.kalypso.gaja3d.service.impl.Gaja3dResource
					</value>
				</parameter>
				<parameter>
					<name>resourceKeyType</name>
					<value>java.lang.String</value>
				</parameter>
				<parameter>
					<name>resourceKeyName</name>
					<value>
						{http://org.kalypso.gaja3d.service}Gaja3dResourceKey
					</value>
				</parameter>
				<parameter>
					<name>factory</name>
					<value>
						org.globus.wsrf.jndi.BeanFactory
					</value>
				</parameter>
				<parameter>
					<name>cacheLocation</name>
					<value>
						java:comp/env/services/Gaja3dService/cache
					</value>
				</parameter>
			</resourceParams>
		</resource>
		<resource name="cache" type="org.globus.wsrf.utils.cache.LRUCache">
			<resourceParams>
				<parameter>
					<name>factory</name>
					<value>
						org.globus.wsrf.jndi.BeanFactory
					</value>
				</parameter>
				<parameter>
					<name>timeout</name>
					<value>120000</value>
				</parameter>
			</resourceParams>
		</resource>
	</service>

	<!-- Factory service -->
	<service name="Gaja3dResourceFactoryService">
		<resourceLink name="home"
			target="java:comp/env/services/Gaja3dService/home" />
	</service>
</jndiConfig>