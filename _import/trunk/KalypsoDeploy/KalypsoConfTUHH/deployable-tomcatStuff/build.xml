<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="Kalypso-TUHH: tomcatStuff" default="deploy-tomcat-conf-tuhh">

	<!-- Project full path -->
	<property name="project.path" value="${workspace}/KalypsoConfTUHH" />
	<property file="${project.path}/deployable-services/deploy.properties" />

	<!-- deploy-tomcat-conf-tuhh -->
	<target name="deploy-tomcat-conf-tuhh" description="Copy the tomcat data files into the tomcat configuration" >
			<copy todir="${tomcat.server.cataling_home}" overwrite="true">
			<fileset dir="${project.path}/deployable-tomcatstuff" excludes="**/CVS/**,build.xml,TomcatService.reg" />
		</copy>
	</target>
</project>
