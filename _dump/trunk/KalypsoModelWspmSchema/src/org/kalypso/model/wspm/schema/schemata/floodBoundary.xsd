<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:gml="http://www.opengis.net/gml" xmlns="http://www.w3.org/2001/XMLSchema" xmlns:wspmcommon="org.kalypso.model.wspmcommon" targetNamespace="org.kalypso.model.wspmboundary"
	xmlns:boundary="org.kalypso.model.wspmboundary" elementFormDefault="qualified" version="0.1">
	<annotation>
		<appinfo xmlns:kapp="org.kalypso.appinfo">
			<kapp:gmlVersion>3.1.1</kapp:gmlVersion>
		</appinfo>
	</annotation>
	<import namespace="org.kalypso.model.wspmcommon" schemaLocation="wspmCommons.xsd"/>
	<import namespace="http://www.opengis.net/gml" schemaLocation="http://schemas.opengis.net/gml/3.1.1/base/gml.xsd"/>
	<!-- schema for flood and model boundaries -->
	<!-- TODO: KALYPSO-Header einf체gen -->
	<!-- 
	_________________________________________________________________________________________
	ELEMENTS
	_________________________________________________________________________________________
	-->
	<element name="Boundary" type="boundary:BoundaryType" substitutionGroup="gml:_Feature">
		<annotation>
			<documentation xml:lang="de">
				<label>Grenze</label>
				<tooltip>Grenze</tooltip>
				<description>Grenze</description>
			</documentation>
		</annotation>
	</element>
	<element name="wspPointMember" type="boundary:WspPointPropertyType" substitutionGroup="gml:featureMember">
		<annotation>
			<documentation xml:lang="de">
				<label>Punkt</label>
				<tooltip>Punkt</tooltip>
				<description>Punkt</description>
			</documentation>
		</annotation>
	</element>
	<element name="WspPoint" type="boundary:WspPointType" substitutionGroup="gml:_Feature">
		<annotation>
			<documentation xml:lang="de">
				<label>Punkt</label>
				<tooltip>Punkt</tooltip>
				<description>Punkt</description>
			</documentation>
		</annotation>
	</element>
	<!-- 
	_________________________________________________________________________________________
	TYPES
	_________________________________________________________________________________________
	-->
	<complexType name="BoundaryType">
		<complexContent>
			<extension base="wspmcommon:NamedFeatureBaseType">
				<sequence>
					<element name="geometry" type="gml:PolygonPropertyType">
						<annotation>
							<documentation xml:lang="de">
								<label>Fl채che</label>
								<tooltip>Fl채che</tooltip>
								<description>Fl채che</description>
							</documentation>
						</annotation>
					</element>
					<element ref="boundary:wspPointMember" minOccurs="0" maxOccurs="unbounded"/>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
	<!--
	-->
	<complexType name="WspPointPropertyType">
		<complexContent>
			<restriction base="gml:FeaturePropertyType">
				<sequence>
					<element ref="boundary:WspPoint"/>
				</sequence>
			</restriction>
		</complexContent>
	</complexType>
	<complexType name="WspPointType">
		<complexContent>
			<extension base="wspmcommon:NamedFeatureBaseType">
				<sequence>
					<element name="geometry" type="gml:PointPropertyType">
						<annotation>
							<documentation xml:lang="de">
								<label>Lage</label>
								<tooltip>Lage</tooltip>
								<description>Lage</description>
							</documentation>
						</annotation>
					</element>
					<element name="station" type="wspmcommon:stationDouble">
						<annotation>
							<documentation xml:lang="de">
								<label>Station</label>
								<tooltip>Station</tooltip>
								<description>Station</description>
							</documentation>
						</annotation>
					</element>
					<element name="wsp" type="double">
						<annotation>
							<documentation xml:lang="de">
								<label>Wasserspiegel</label>
								<tooltip>Wasserspiegel</tooltip>
								<description>Wasserspiegel</description>
							</documentation>
						</annotation>
					</element>
					<element name="ufer">
						<annotation>
							<documentation xml:lang="de">
								<label>Uferseite</label>
								<tooltip>Uferseite</tooltip>
								<description>Uferseite</description>
							</documentation>
						</annotation>
						<simpleType>
							<restriction base="string">
								<enumeration value="right">
									<annotation>
										<documentation xml:lang="de">
											<label>rechtes Ufer</label>
											<tooltip>rechtes Ufer</tooltip>
											<description>rechtes Ufer</description>
										</documentation>
									</annotation>
								</enumeration>
								<enumeration value="left">
									<annotation>
										<documentation xml:lang="de">
											<label>linkes Ufer</label>
											<tooltip>linkes Ufer</tooltip>
											<description>linkes Ufer</description>
										</documentation>
									</annotation>
								</enumeration>
							</restriction>
						</simpleType>
					</element>
				</sequence>
			</extension>
		</complexContent>
	</complexType>
</schema>
