<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.kalypso.metadoc"
   name="org.kalypso.metadoc Plug-in"
   version="1.0.0"
   provider-name="kalypso.org"
   class="org.kalypso.metadoc.KalypsoMetaDocPlugin">

   <runtime>
      <library name="org.kalypso.metadoc.jar">
         <export name="*"/>
      </library>
      <library name="lib/commons-configuration-1.1.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.kalypso.commons"/>
   </requires>
   <extension-point id="exportTarget" name="exportTarget" schema="schema/exportTarget.exsd"/>
   <extension
         point="org.kalypso.metadoc.exportTarget">
      <target
            icon="icons/file_obj.gif"
            class="org.kalypso.metadoc.impl.FileExportTarget"
            description="Exportiert das Dokument in eine Datei"
            name="Dateiexport"
            id="fileTarget"/>
   </extension>

</plugin>
