<?xml version="1.0"?>
<project name="KalypsoCoreServicesBuild" default="deploy">

  <!-- Propertys aus einer Datei laden -->
  <property file="../../../projectbuild.properties" />

  <property name="project" value="${workspace}/KalypsoCoreServices" />
  <property name="project.build" value="${project}/build" />
  <property name="project.bin" value="${project.build}/bin" />
  <property name="project.doc" value="${project.build}/doc" />
  <property name="project.src" value="${project}/src" />
  <property name="project.lib" value="${project}/lib" />

  <path id="project.classpath">
    <fileset dir="${project.lib}" includes="**/*.jar" />
  </path>


  <target name="prepare">
    <mkdir dir="${project.bin}" />
  </target>

  <target name="compile" depends="prepare">
    <echo message="Compiliere Sourcen ..." />
    <javac srcdir="${project.src}"
           destdir="${project.bin}"
           classpathref="project.classpath"
    >
    </javac>
  </target>

  <target name="junit-test"
          description="Runs the junit-tests of the projekt"
          depends="prepare,compile"
  >
    <junit haltonerror="false" fork="true">
      <classpath>
        <path refid="project.classpath" />
      </classpath>

      <formatter type="xml" />

      <batchtest fork="yes" todir=".">
        <fileset dir="${project.src}">
          <include name="**/*Test*.java" />
        </fileset>
      </batchtest>
    </junit>
  </target>

  <target name="deploy" depends="compile">
    <!--jar destfile="${project.build}/KalypsoDeegree.jar">
      <fileset dir="${project.bin}" includes="**/*" />
    </jar-->
  </target>

  <target name="javadoc" depends="prepare">
    <echo message="Generating Javadoc ..." />
    <javadoc access="protected"
             classpathref="projekt.classpath"
             destdir="${project.doc}"
    >
      <fileset dir="${project.src}" casesensitive="no">
        <include name="**/*.java" />
        <exclude name="**/*test*.java" />
      </fileset>
    </javadoc>
  </target>

  <target name="clean">
    <echo message="Rauume auf ..." />
    <delete dir="${project.build}" />
  </target>

</project>

