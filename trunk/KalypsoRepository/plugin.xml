<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.kalypso.repository"
   name="KalypsoRepository"
   version="0.0.5"
   provider-name="org.kalypso">

   <runtime>
      <library name="lib/dom.jar">
         <export name="*"/>
      </library>
      <library name="lib/jaxb-api.jar">
         <export name="*"/>
      </library>
      <library name="lib/jaxb-impl.jar">
         <export name="*"/>
      </library>
      <library name="lib/jaxb-libs.jar">
         <export name="*"/>
      </library>
      <library name="lib/jaxb-xjc.jar">
         <export name="*"/>
      </library>
      <library name="lib/namespace.jar">
         <export name="*"/>
      </library>
      <library name="lib/relaxngDatatype.jar">
         <export name="*"/>
      </library>
      <library name="lib/repositoryBinding.jar">
         <export name="*"/>
      </library>
      <library name="lib/xercesImpl.jar">
         <export name="*"/>
      </library>
      <library name="lib/xsdlib.jar">
         <export name="*"/>
      </library>
      <library name="kalypsorepository.jar">
         <export name="*"/>
         <packages prefixes="org.kalypso.repository"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.core.runtime" export="true"/>
      <import plugin="org.kalypso.util" export="false"/>
   </requires>

   <extension-point id="factories" name="RepositoryFactories" schema="schema/repfactories.exsd"/>

</plugin>
