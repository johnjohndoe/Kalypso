<?xml version="1.0"?>
<project name="KalypsoRepositoryBuild" default="deploy">

	<property name="project" value="${workspace}/KalypsoRepository" />
	
	<path id="compile.classpath">
		<fileset dir="${project.lib}" includes="**/*.jar" />
		<fileset dir="${ant.file.commonbuild}/../compile-libs" includes="**/*.jar" />
		<fileset dir="${jwsdp}/jaxb/lib" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoUtil/build/deploy" includes="**/*.jar" />
	</path>

	<import file="${workspace}/KalypsoBuild/common-project/build.xml" />
	<property name="project-name" value="KalypsoRepository" />

	<target name="binding">
		<ant antfile="${project}/etc/xmlbinding/build.xml" inheritall="false" target="deploy" dir="${project}/etc/xmlbinding" />
	</target>

	<!-- Override compile to resolve dependencies to binding -->
	<target name="compile" depends="prepare,binding">
		<antcall target="commonbuild.compile" />
	</target>

</project>
