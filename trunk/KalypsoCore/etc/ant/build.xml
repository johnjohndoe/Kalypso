<?xml version="1.0"?>
<project name="KalypsoCoreBuild" default="deploy" basedir="../..">

  <!-- Pfad zum Workspace -->
  <property file="../KalypsoBuild/projectbuild.properties" />
  
  <!-- eclipse Abhaenigkeiten -->
  <property name="eclipse.path" value="C:\Programme/eclipse3" />
  <property name="eclipse.plugins" value="${eclipse.path}/plugins" />

  <property name="project" value="${workspace}/KalypsoCore" />
  <property name="project.bin" value="${project}/build/bin" />
  <property name="project.src" value="${project}/src" />
  <property name="project.lib" value="${project}/lib" />

  <path id="project.classpath">
    <fileset dir="${project.lib}" includes="**/*.jar" />
    <pathelement path="${workspace}/KalypsoDeegree/build/bin" />
    <pathelement path="${workspace}/KalypsoUtil/build/bin" />
  	<pathelement path="${workspace}/KalypsoRepository/build/bin" />
  	<pathelement path="${workspace}/KalypsoCore/build/bin" />
    <pathelement path="${eclipse.plugins}" />
  </path>


  <target name="prepare">
    <mkdir dir="${project.bin}" />
  </target>

  <target name="wsdp">
    <ant antfile="${project}/etc/schemas/build.xml"
         inheritall="true"
         target="deploy"
         dir="${project}/etc/schemas"
    />
  </target>

  <target name="compile" depends="prepare,wsdp">
    <echo message="Compiliere Sourcen ..." />
    <javac srcdir="${project.src}"
           destdir="${project.bin}"
           classpathref="project.classpath"
    >
    </javac>
  </target>

  <target name="junit-test"
          description="Runs the junit-tests of the projekt"
          depends="prepare,compile"
  >
    <junit haltonerror="false" fork="true">
      <classpath>
        <path refid="project.classpath" />
      </classpath>

      <formatter type="xml" />

      <batchtest fork="yes" todir=".">
        <fileset dir="${project.src}">
          <include name="**/*Test*.java" />
        </fileset>
      </batchtest>
    </junit>
  </target>

  <target name="deploy" depends="compile">
    <jar basedir="${project.bin}" destfile="${project}/build/KalypsoCore.jar" />
  </target>

  <target name="javadoc" depends="prepare">
    <echo message="Erzeuge die Dokumentation ..." />
    <javadoc destdir="${project.doc}"
             failonerror="true"
             classpathref="project.classpath"
    >
      <fileset dir="${project.src}" casesensitive="false">
        <include name="**/*.java" />
        <exclude name="**/*test*.java" />
      </fileset>
    </javadoc>
  </target>


</project>

