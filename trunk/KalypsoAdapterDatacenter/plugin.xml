<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="org.kalypso.dcadapter"
   name="KalypsoDatacenterAdapter"
   version="0.0.5"
   provider-name="org.kalypso"
   class="org.kalypso.dcadapter.DataCenterPlugin">

   <runtime>
      <library name="lib/edbc.jar">
         <export name="*"/>
      </library>
      <library name="kalypsodc.jar">
         <packages prefixes="com.bce.datacenter,org.kalypso.dcadapter"/>
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.kalypso.core" export="false"/>
      <import plugin="org.eclipse.ui"/>
   </requires>

   <extension
         id="org.kalypso.repository.factories"
         name="DataCenter RepositoryFactories"
         point="org.kalypso.repository.factories">
      <repository
            factory="org.kalypso.dcadapter.DataCenterRepositoryFactory"
            name="Datenbank DataCenter"
            >
      </repository>
   </extension>

</plugin>
