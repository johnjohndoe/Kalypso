<?xml version="1.0"?>
<project name="KalypsoOptimizePluginBuild" default="deploy">

	<property name="project" value="${workspace}/KalypsoOptimizePlugin" />
	
	<path id="compile.classpath">
		<fileset dir="${project.lib}" includes="**/*.jar" />
		<fileset dir="${jwsdp}/jaxb/lib" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoUtil/build/deploy" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoCore/build/deploy" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoDeegree/build/deploy" includes="**/*.jar" />
		<fileset dir="${workspace}/KalypsoCalcService/build/deploy" includes="**/*.jar" />
	</path>

	<import file="${workspace}/KalypsoBuild/common-project/build.xml" />
	<property name="project-name" value="KalypsoOptimizePlugin" />

	<target name="binding">
		<ant antfile="${project}/etc/schemas/build.xml" inheritall="false" target="deploy" dir="${project}/etc/schemas/optimizer" />
	</target>

	<!-- Override compile to resolve dependencies to binding and also for copying non-java files -->
	<target name="compile" depends="prepare,binding">
		<antcall target="commonbuild.compile" />
		
			<copy todir="${project.bin}">
				<fileset dir="${project.src}" excludes="**/*.java"/>
			</copy>
	</target>

</project>
